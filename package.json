{
  "name": "lunation",
  "version": "3.0.0",
  "private": true,
  "description": "Private, mobile-first cycle tracker to log periods, symptoms, and medications with on-device storage and smart predictions.",
  "keywords": [
    "menstrual-cycle",
    "period-tracking",
    "fertility",
    "health",
    "react",
    "privacy"
  ],
  "author": "Thomas Kase Black",
  "homepage": ".",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@sentry/react": "^10.10.0",
    "@sentry/vite-plugin": "^4.3.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^24.1.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.3"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "build:gh": "VITE_BASE_PATH=/Lunation/ vite build",
    "pages": "rm -rf docs && cp -r dist docs && cp docs/index.html docs/404.html || true",
    "deploy:gh": "npm run build:gh && npm run pages"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
